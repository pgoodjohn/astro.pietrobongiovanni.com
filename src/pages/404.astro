---
import Layout from "../layouts/DefaultLayout.astro";
---

<Layout>
    <div
        class="container mx-auto px-4 py-24 max-w-3xl font-mono flex flex-col items-center justify-center min-h-[60vh]"
    >
        <h1 class="text-7xl font-bold mb-6">
            404<span class="text-indigo-500">.</span>
        </h1>

        <div class="mb-12 text-center">
            <p class="text-xl mb-2">
                This page was not found<span class="text-indigo-500">.</span>
            </p>
            <p class="text-gray-500">
                The page you're looking for doesn't exist or has been moved.
            </p>
        </div>

        <a
            href="/"
            class="py-2 px-6 border border-gray-300 hover:border-indigo-500 hover:text-indigo-500 transition-colors duration-300 rounded-md"
        >
            ‚Üê Return home
        </a>
    </div>
</Layout>

<style>
    /* Optional: Add subtle animation to the 404 text */
    h1 {
        position: relative;
        animation: subtle-float 4s ease-in-out infinite;
    }

    @keyframes subtle-float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
</style>
